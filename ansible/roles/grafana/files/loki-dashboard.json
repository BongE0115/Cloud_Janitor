{
  "id": null,
  "uid": "cloud-janitor-loki",
  "title": "Cloud Janitor — Loki Logs",
  "refresh": "10s",
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "label": "Namespace",
        "datasource": { "type": "loki", "uid": "-- Grafana --" },
        "definition": "label_values({job=~\".+\"}, namespace)",
        "query": "label_values({job=~\".+\"}, namespace)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".+",
        "multi": false,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      },
      {
        "name": "pod",
        "type": "query",
        "label": "Pod",
        "datasource": { "type": "loki", "uid": "-- Grafana --" },
        "definition": "label_values({namespace=~\"$namespace\"}, pod)",
        "query": "label_values({namespace=~\"$namespace\"}, pod)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".+",
        "multi": false,
        "current": { "selected": true, "text": "All", "value": "$__all" }
      }
    ]
  },
  "panels": [
    {
      "type": "logs",
      "title": "실시간 로그  [$namespace / $pod]",
      "gridPos": { "h": 22, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "-- Grafana --" },
      "targets": [
        {
          "expr": "{namespace=~\"$namespace\", pod=~\"$pod\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "timezone": "browser"
}
